---
/** * PREMIUM TITAN NAVIGATION - MOBILE FIX
 * Features: Floating Glassmorphism, Interactive Hover States, Mobile Logic, Proper Spacing
 */
interface Props {
  currentPage?: string;
}

const { currentPage = 'home' } = Astro.props;
---

<nav class="fixed top-0 z-[100] w-full px-4 md:px-8 py-4 transition-all duration-500" id="navbar">
  <div class="max-w-7xl mx-auto bg-white/80 backdrop-blur-2xl border border-gray-100 rounded-[24px] px-6 shadow-[0_8px_30px_rgb(0,0,0,0.04)] transition-all duration-300">
    <div class="flex h-20 items-center justify-between">
      
      <a href="/" class="group flex items-center gap-3">
        <div class="w-10 h-10 bg-[#030A8C] rounded-xl flex items-center justify-center shadow-lg shadow-[#030A8C]/20 group-hover:rotate-12 transition-transform duration-300">
           <span class="text-white font-black text-lg italic">L</span>
        </div>
        <span class="text-2xl font-black text-[#0D0D0D] tracking-tighter">Lijoh<span class="text-[#030A8C]">Hr</span></span>
      </a>

      <div class="hidden md:flex items-center gap-10">
        <div class="flex items-center gap-8">
          {['Features', 'Pricing', 'How It Works', 'Testimonials'].map((item) => (
            <a 
              href={`#${item.toLowerCase().replace(/\s+/g, '-')}`} 
              class="text-sm font-bold text-gray-500 hover:text-[#030A8C] transition-colors relative group/link"
            >
              {item}
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-[#F29F05] transition-all group-hover/link:w-full"></span>
            </a>
          ))}
        </div>

        <div class="h-6 w-px bg-gray-100 mx-2"></div>

        <div class="flex items-center gap-6">
          <a href="/signin" class="text-sm font-black text-[#0D0D0D] hover:text-[#030A8C] transition-colors">Sign In</a>
          <a
            href="#pricing"
            class="bg-[#030A8C] text-white px-7 py-3 rounded-xl font-black text-sm shadow-xl shadow-[#030A8C]/20 hover:bg-[#0D0D0D] hover:scale-105 transition-all duration-300 flex items-center gap-2"
          >
            Get Started
            <svg class="h-4 w-4 text-[#F29F05]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>

      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-xl hover:bg-gray-50 transition-colors"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="h-6 w-6 text-[#0D0D0D]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
        <svg id="close-icon" class="h-6 w-6 text-[#0D0D0D] hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- MOBILE MENU - Now inside nav for proper z-stacking -->
    <div id="mobile-menu" class="hidden md:hidden pb-8 animate-in fade-in slide-in-from-top-4 duration-300 max-h-[calc(100vh-120px)] overflow-y-auto">
      <div class="flex flex-col gap-4">
        {['Features', 'Pricing', 'How It Works', 'Testimonials'].map((item) => (
          <a href={`#${item.toLowerCase().replace(/\s+/g, '-')}`} class="text-lg font-bold text-[#0D0D0D] px-4 py-3 rounded-2xl hover:bg-gray-50 transition-colors">
            {item}
          </a>
        ))}
        <div class="h-px bg-gray-100 my-2"></div>
        <a href="/signin" class="text-lg font-bold text-[#0D0D0D] px-4 py-3 transition-colors hover:text-[#030A8C]">Sign In</a>
        <a href="#pricing" class="bg-[#F29F05] text-[#0D0D0D] px-6 py-4 rounded-2xl font-black text-center shadow-lg shadow-[#F29F05]/20 transition-all hover:scale-105">
          Get Started Now
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- MOBILE SPACER - Prevents hero section overlap -->
<div id="nav-spacer" class="h-0 md:hidden transition-all duration-500"></div>

<script>
  const navbar = document.getElementById('navbar');
  const navSpacer = document.getElementById('nav-spacer');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  // Calculate navbar height dynamically
  function updateNavHeight() {
    const navHeight = navbar?.offsetHeight || 0;
    const menuHeight = mobileMenu?.classList.contains('hidden') ? 0 : mobileMenu?.offsetHeight || 0;
    const totalHeight = navHeight + menuHeight;
    
    if (navSpacer) {
      navSpacer.style.height = totalHeight + 'px';
    }
  }

  // Sticky Scroll Logic: Adds padding on scroll for "floating" effect
  window.addEventListener('scroll', () => {
    if (window.scrollY > 20) {
      navbar?.classList.add('py-2');
      navbar?.classList.remove('py-4');
    } else {
      navbar?.classList.add('py-4');
      navbar?.classList.remove('py-2');
    }
    updateNavHeight();
  });

  // Toggle Mobile Menu
  mobileMenuBtn?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.contains('hidden');
    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
    } else {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
    // Update spacer height after menu toggle
    setTimeout(updateNavHeight, 0);
  });

  // Auto-close on link click
  document.querySelectorAll('#mobile-menu a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
      // Update spacer height after menu closes
      setTimeout(updateNavHeight, 0);
    });
  });

  // Initialize on page load
  window.addEventListener('load', updateNavHeight);
  
  // Handle window resize
  window.addEventListener('resize', updateNavHeight);

  // Observe navbar changes
  const observer = new MutationObserver(updateNavHeight);
  if (navbar) {
    observer.observe(navbar, { 
      attributes: true, 
      childList: true, 
      subtree: true 
    });
  }
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;700;800&display=swap');
  
  nav {
    font-family: 'Plus Jakarta Sans', sans-serif;
  }

  #mobile-menu {
    animation: slideDown 300ms ease-out forwards;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>