---
/** * PREMIUM TITAN NAVIGATION - LAUNCH READY
 * Features: Floating Glassmorphism, Interactive Hover States, Mobile Logic, Launch Trigger
 */
interface Props {
  currentPage?: string;
}

const { currentPage = 'home' } = Astro.props;
---

<nav class="fixed top-0 z-[100] w-full px-4 md:px-8 py-4 transition-all duration-500" id="navbar">
  <div class="max-w-7xl mx-auto bg-white/80 backdrop-blur-2xl border border-gray-100 rounded-[24px] px-6 shadow-[0_8px_30px_rgb(0,0,0,0.04)] transition-all duration-300">
    <div class="flex h-16 md:h-20 items-center justify-between">
      
      <a href="/" class="group flex items-center">
        <img src="/lijoh.png" alt="Lijoh Logo" class="h-20 md:h-24 w-auto object-contain group-hover:scale-105 transition-transform duration-300" />
      </a>

      <div class="hidden md:flex items-center gap-10">
        <div class="flex items-center gap-8">
          {['Features', 'Pricing', 'How It Works', 'Testimonials'].map((item) => (
            <a 
              href={`#${item.toLowerCase().replace(/\s+/g, '-')}`} 
              class="text-sm font-bold text-gray-500 hover:text-[#030A8C] transition-colors relative group/link"
            >
              {item}
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-[#F29F05] transition-all group-hover/link:w-full"></span>
            </a>
          ))}
        </div>

        <div class="h-6 w-px bg-gray-100 mx-2"></div>

        <div class="flex items-center gap-6">
          <a href="#" class="launch-trigger-btn text-sm font-black text-[#0D0D0D] hover:text-[#030A8C] transition-colors">Sign In</a>
          <a
            href="#"
            class="launch-trigger-btn bg-[#030A8C] text-white px-7 py-3 rounded-xl font-black text-sm shadow-xl shadow-[#030A8C]/20 hover:bg-[#0D0D0D] hover:scale-105 transition-all duration-300 flex items-center gap-2"
          >
            Get Started
            <svg class="h-4 w-4 text-[#F29F05]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>

      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-xl hover:bg-gray-50 transition-colors"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="h-6 w-6 text-[#0D0D0D]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
        <svg id="close-icon" class="h-6 w-6 text-[#0D0D0D] hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden md:hidden pb-8 animate-in fade-in slide-in-from-top-4 duration-300">
      <div class="flex flex-col gap-4">
        {['Features', 'Pricing', 'How It Works', 'Testimonials'].map((item) => (
          <a href={`#${item.toLowerCase().replace(/\s+/g, '-')}`} class="text-lg font-bold text-[#0D0D0D] px-4 py-3 rounded-2xl hover:bg-gray-50 transition-colors">
            {item}
          </a>
        ))}
        <div class="h-px bg-gray-100 my-2"></div>
        <a href="#" class="launch-trigger-btn text-lg font-bold text-[#0D0D0D] px-4 py-3 transition-colors hover:text-[#030A8C]">Sign In</a>
        <a href="#" class="launch-trigger-btn bg-[#F29F05] text-[#0D0D0D] px-6 py-4 rounded-2xl font-black text-center shadow-lg shadow-[#F29F05]/20 transition-all active:scale-95">
          Get Started Now
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const navbar = document.getElementById('navbar');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  
  // LAUNCH OVERLAY ELEMENTS
  const launchOverlay = document.getElementById('launch-overlay');
  const launchCard = document.getElementById('launch-card');

  // TRIGGER LOGIC for Sign In and Get Started
  const launchButtons = document.querySelectorAll('.launch-trigger-btn');
  
  launchButtons.forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      
      // Close mobile menu if it's open
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');

      if (launchOverlay && launchCard) {
        launchOverlay.classList.remove('hidden');
        launchOverlay.classList.add('flex');
        setTimeout(() => {
          launchCard.classList.remove('scale-95', 'opacity-0', 'translate-y-10');
        }, 10);
      }
    });
  });

  // Sticky Scroll Logic
  window.addEventListener('scroll', () => {
    if (window.scrollY > 20) {
      navbar?.classList.add('py-2');
      navbar?.classList.remove('py-4');
    } else {
      navbar?.classList.add('py-4');
      navbar?.classList.remove('py-2');
    }
  });

  // Toggle Mobile Menu
  mobileMenuBtn?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.contains('hidden');
    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      menuIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
    } else {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  });

  // Auto-close on nav link click
  document.querySelectorAll('#mobile-menu a:not(.launch-trigger-btn)').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;700;800&display=swap');
  
  nav {
    font-family: 'Plus Jakarta Sans', sans-serif;
  }
</style>