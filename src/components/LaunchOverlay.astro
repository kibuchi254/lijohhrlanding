---
/** * TITAN LAUNCH OVERLAY v3.0 - STUDIO WHITE EDITION
 * Features: Viewport-aware scaling, Studio White Glassmorphism, Vertical Centering
 * Theme: Studio White, Deep Blue (#030A8C), Gold (#F29F05)
 */
---

<div id="launch-overlay" class="fixed inset-0 z-[500] hidden items-center justify-center p-6 md:p-12 overflow-hidden">
  <div class="absolute inset-0 bg-[#0D0D0D]/80 backdrop-blur-xl transition-opacity duration-1000" id="overlay-bg"></div>

  <div class="relative w-full max-w-[850px] max-h-[90vh] bg-white rounded-[40px] md:rounded-[56px] shadow-[0_50px_100px_-20px_rgba(0,0,0,0.4)] overflow-hidden transform transition-all duration-700 scale-95 opacity-0 translate-y-10 flex flex-col" id="launch-card">
    
    <div class="absolute top-0 right-0 w-64 h-64 bg-[#030A8C]/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-48 h-48 bg-[#F29F05]/10 rounded-full blur-3xl"></div>

    <div class="relative z-10 grid md:grid-cols-12 h-full overflow-y-auto lg:overflow-visible">
      
      <div class="md:col-span-7 p-8 md:p-14 flex flex-col justify-center text-center md:text-left border-b md:border-b-0 md:border-r border-gray-100">
        <div class="inline-flex items-center gap-2 bg-gray-50 border border-gray-100 w-fit px-4 py-2 rounded-full mb-6 mx-auto md:mx-0">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#030A8C] opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-[#030A8C]"></span>
          </span>
          <span class="text-[10px] font-black uppercase tracking-[0.3em] text-[#030A8C]">Deployment Protocol</span>
        </div>

        <h2 class="text-4xl md:text-5xl font-black text-[#0D0D0D] tracking-tighter leading-[0.9] mb-6">
          The Future of <br/> 
          <span class="text-[#030A8C]">Work</span> is Here.
        </h2>

        <p class="text-base md:text-lg text-gray-500 font-medium mb-10 leading-relaxed">
          LijohHr officially deploys this <span class="text-[#0D0D0D] font-black underline decoration-[#F29F05] decoration-2 underline-offset-4">Monday, Jan 12th</span>. Experience the most precise AI Payroll OS in Kenya.
        </p>

        <div class="flex flex-col sm:flex-row items-center gap-4">
          <button id="close-launch" class="w-full sm:w-auto px-8 py-4 bg-[#030A8C] text-white rounded-2xl font-black text-sm shadow-xl shadow-[#030A8C]/20 hover:bg-[#0D0D0D] transition-all active:scale-95">
            Notify Me
          </button>
          <button id="dismiss-launch" class="text-xs font-black text-gray-400 hover:text-[#0D0D0D] uppercase tracking-widest transition-colors px-4 py-2">
            Skip to Preview
          </button>
        </div>
      </div>

      <div class="md:col-span-5 bg-gray-50/50 p-8 md:p-10 flex flex-col justify-center">
        <div class="grid grid-cols-2 md:grid-cols-1 gap-4 md:gap-6">
          {['Days', 'Hours', 'Min', 'Sec'].map((label) => (
            <div class="flex items-center justify-between md:bg-white md:p-4 md:rounded-2xl md:border md:border-gray-100">
              <span class="text-[10px] font-black text-gray-400 uppercase tracking-widest">{label}</span>
              <span class="text-3xl md:text-4xl font-black text-[#0D0D0D] tracking-tighter countdown-value" id={`countdown-${label.toLowerCase()}`}>00</span>
            </div>
          ))}
        </div>

        <div class="mt-8 pt-8 border-t border-gray-200">
           <div class="flex justify-between items-center text-[9px] font-black text-gray-400 uppercase tracking-widest mb-3">
              <span>Initialization</span>
              <span class="text-[#030A8C]">99%</span>
           </div>
           <div class="h-1.5 w-full bg-gray-200 rounded-full overflow-hidden">
              <div class="h-full bg-gradient-to-r from-[#030A8C] to-[#F29F05] w-[99%] animate-pulse"></div>
           </div>
        </div>
      </div>
    </div>

    <div class="h-1.5 w-full bg-[#F29F05]"></div>
  </div>
</div>

<script>
  // TARGET DATE: Jan 12, 2026
  const launchDate = new Date("January 12, 2026 08:00:00").getTime();
  const overlay = document.getElementById('launch-overlay');
  const card = document.getElementById('launch-card');
  const closeBtn = document.getElementById('close-launch');
  const dismissBtn = document.getElementById('dismiss-launch');

  function updateCountdown() {
    const now = new Date().getTime();
    const distance = launchDate - now;

    if (distance < 0) {
      overlay?.classList.add('hidden');
      return;
    }

    const d = Math.floor(distance / (1000 * 60 * 60 * 24));
    const h = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const m = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const s = Math.floor((distance % (1000 * 60)) / 1000);

    const format = (num: number) => num.toString().padStart(2, '0');

    const daysEl = document.getElementById("countdown-days");
    const hoursEl = document.getElementById("countdown-hours");
    const minEl = document.getElementById("countdown-min");
    const secEl = document.getElementById("countdown-sec");

    if(daysEl) daysEl.innerText = format(d);
    if(hoursEl) hoursEl.innerText = format(h);
    if(minEl) minEl.innerText = format(m);
    if(secEl) secEl.innerText = format(s);
  }

  const hasSeenLaunch = sessionStorage.getItem('lijohhr-launch-v3');
  
  if (!hasSeenLaunch) {
    setTimeout(() => {
      overlay?.classList.remove('hidden');
      overlay?.classList.add('flex');
      requestAnimationFrame(() => {
        card?.classList.remove('scale-95', 'opacity-0', 'translate-y-10');
        card?.classList.add('scale-100', 'opacity-100', 'translate-y-0');
      });
      setInterval(updateCountdown, 1000);
    }, 1500);
  }

  const hideOverlay = () => {
    card?.classList.add('scale-110', 'opacity-0');
    setTimeout(() => {
      overlay?.classList.add('hidden');
      sessionStorage.setItem('lijohhr-launch-v3', 'true');
    }, 500);
  };

  closeBtn?.addEventListener('click', hideOverlay);
  dismissBtn?.addEventListener('click', hideOverlay);
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;700;800;900&display=swap');
  
  #launch-overlay {
    font-family: 'Plus Jakarta Sans', sans-serif;
  }

  .countdown-value {
    font-variant-numeric: tabular-nums;
  }

  /* Custom Scrollbar for the internal content if it ever overflows on tiny phones */
  #launch-card::-webkit-scrollbar {
    width: 4px;
  }
  #launch-card::-webkit-scrollbar-thumb {
    background: #030A8C;
    border-radius: 10px;
  }
</style>