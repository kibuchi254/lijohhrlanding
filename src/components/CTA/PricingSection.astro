---
// Pricing Section Component
---

<section id="pricing" class="section-padding bg-gradient-to-b from-white to-gray-50/50">
  <div class="container">
    <!-- Section Header -->
    <div class="max-w-3xl mx-auto text-center mb-16 animate-slide-up">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-cta/10 text-cta hover:bg-cta/20 transition-colors mb-4">
        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 3 3 3 3 .895 0 3-1.343 3-3m0 0c-1.11 0-2.08 .402-2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-sm font-semibold">Simple Pricing</span>
      </div>

      <h2 class="text-3xl sm:text-4xl font-bold text-text-primary mb-4">
        Choose Your Perfect Plan
      </h2>
      <p class="text-lg text-gray-600">
        Transparent pricing with no hidden fees. Start your HR transformation today.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      <!-- Yearly Package -->
      <div class="card-hover bg-white rounded-3xl p-8 border-2 border-gray-200 hover:border-primary/30 relative animate-fade-in" style="animation-delay: 0.2s;">
        <!-- Most Popular Badge -->
        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
          <div class="bg-gradient-to-r from-primary to-accent text-white text-xs font-bold px-4 py-2 rounded-full shadow-lg">
            MOST POPULAR
          </div>
        </div>

        <div class="text-center mb-8 pt-4">
          <h3 class="text-2xl font-bold text-text-primary mb-3">Yearly Package</h3>
          <p class="text-gray-600 mb-6">Best for long-term savings</p>

          <!-- Price -->
          <div class="mb-6">
            <div class="flex items-baseline justify-center gap-2">
              <span class="text-5xl sm:text-6xl font-extrabold text-text-primary">50K</span>
              <span class="text-3xl sm:text-4xl font-bold text-gray-400">+ 5K</span>
            </div>
            <div class="text-gray-600 mt-2">
              <span class="text-lg font-semibold">Yearly</span>
              <span class="text-sm ml-2">Maintenance Fee</span>
            </div>
          </div>

          <!-- Features -->
          <ul class="space-y-4 text-left mb-8">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
