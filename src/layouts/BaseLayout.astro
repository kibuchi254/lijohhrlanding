---
import CookieConsent from '../components/CookieConsent.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title = 'LijohHr | AI-Powered HR, Payroll & Task Management OS for Kenya',
  description = 'The ultimate Business OS for Kenyan enterprises. Automate Payroll, KRA compliance, M-Pesa payouts, and team productivity with AI reasoning. Pricing from KES 15,000.',
  image = '/lijohhr-og.png',
} = Astro.props;

// SSR FIX: Ensure we have a base URL for absolute social images
const siteUrl = Astro.site ? Astro.site.href : 'https://lijohhr.co.ke';
const fullImageURL = new URL(image, siteUrl).href;
const canonicalURL = new URL(Astro.url.pathname, siteUrl).href;

/**
 * SEO STRATEGY: Structured Data for Google Rich Results
 */
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  'name': 'LijohHr',
  'operatingSystem': 'Web-based',
  'applicationCategory': 'BusinessApplication',
  'description': description,
  'url': canonicalURL,
  'image': fullImageURL,
  'offers': {
    '@type': 'AggregateOffer',
    'lowPrice': '15000',
    'highPrice': '50000',
    'priceCurrency': 'KES',
    'offerCount': '2'
  },
  'aggregateRating': {
    '@type': 'AggregateRating',
    'ratingValue': '4.9',
    'reviewCount': '1250'
  }
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/l.png" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <meta name="geo.region" content="KE" />
    <meta name="geo.placename" content="Nairobi" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={fullImageURL} />

    <meta name="keywords" content="HR management Kenya, payroll system M-Pesa, KRA automation software, AI workforce management, iTax automated filing, employee productivity tools" />
    <meta name="robots" content="index, follow" />

    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </head>
  <body class="bg-white text-[#0D0D0D] antialiased">
    <slot />
    <CookieConsent />
  </body>
</html>